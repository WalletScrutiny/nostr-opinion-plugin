{
	"name": "nostr-opinion",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"build:summariser": "esbuild ./src/summariser.ts --bundle --platform=node --target=node12 --outfile=./dist/nostr-opinion-summariser.js --format=cjs",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"prepare": "husky install",
		"lint": "eslint src --fix",
		"format": "prettier src --write"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^2.0.0",
		"@tsconfig/svelte": "^4.0.0",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"autoprefixer": "^10.4.16",
		"esbuild": "^0.16.3",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-svelte": "^2.35.1",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"nostr-tools": "^2.1.5",
		"postcss": "^8.4.32",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.3",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.3.5",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.0.0"
	},
	"dependencies": {
		"@nostr-dev-kit/ndk": "^2.2.0",
		"@nostr-dev-kit/ndk-cache-dexie": "^2.2.0",
		"@nostr-dev-kit/ndk-svelte": "^2.2.0",
		"@skeletonlabs/skeleton": "^2.5.1",
		"@toast-ui/editor": "^3.2.2",
		"@void-cat/api": "^1.0.10",
		"bech32": "^2.0.0",
		"marked": "^11.0.0"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": "eslint src --fix",
		"*.{json,js,ts,svelte,html}": "prettier src --write --ignore-unknown"
	}
}
