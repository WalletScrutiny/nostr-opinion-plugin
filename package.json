{
	"name": "nostr-opinion",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "rm -f index.html && ln -s index.staging.html index.html && vite",
		"build": "vite build",
		"build:summariser": "esbuild ./src/summariser.ts --bundle --platform=node --target=node12 --outfile=./dist/nostr-opinion-summariser.js --format=cjs",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"prepare": "husky install",
		"lint": "eslint src --fix",
		"format": "prettier src --write",
		"deploy:staging": "rm -f .env.local && ln -s .env.staging .env.local && rm -f index.html && ln -s index.staging.html index.html && ./bin/deploy.sh",
		"deploy:production": "rm -f .env.local && ln -s .env.production .env.local && rm -f index.html && ln -s index.production.html index.html && npm run build && cp index.html ./dist && ./bin/deploy.sh"
	},
	"devDependencies": {
		"@esbuild/linux-x64": "^0.20.0",
		"@sveltejs/vite-plugin-svelte": "^2.0.0",
		"@tsconfig/svelte": "^4.0.0",
		"@types/dompurify": "^3.2.0",
		"@types/node": "^20.19.9",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"autoprefixer": "^10.4.21",
		"esbuild": "^0.16.3",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-prettier": "^5.5.3",
		"eslint-plugin-svelte": "^2.46.1",
		"husky": "^8.0.3",
		"lint-staged": "^15.5.2",
		"nostr-tools": "^2.15.2",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^4.2.20",
		"svelte-check": "^3.8.6",
		"tailwindcss": "^3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"vite": "^4.5.14"
	},
	"dependencies": {
		"@nostr-dev-kit/ndk": "2.5.0",
		"@nostr-dev-kit/ndk-cache-dexie": "2.2.7",
		"@nostr-dev-kit/ndk-svelte": "2.2.7",
		"@skeletonlabs/skeleton": "^2.11.0",
		"@toast-ui/editor": "^3.2.2",
		"@void-cat/api": "^1.0.10",
		"bech32": "^2.0.0",
		"dompurify": "^3.2.6",
		"marked": "^11.0.0",
		"ws": "^8.18.3"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": "eslint src --fix",
		"*.{json,js,ts,svelte,html}": "prettier src --write --ignore-unknown"
	}
}
